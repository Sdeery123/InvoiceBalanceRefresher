<Window x:Class="InvoiceBalanceRefresher.CredentialManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credential Management" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Left side - Credential Set List -->
        <TextBlock Grid.Column="0" Grid.Row="0" Text="Saved Credential Sets" FontWeight="Bold" Margin="0,0,0,5"/>
        <ListBox Grid.Column="0" Grid.Row="1" Name="CredentialSetListBox" Margin="0,0,10,0"
                 DisplayMemberPath="Name" SelectionChanged="CredentialSetListBox_SelectionChanged"/>
        <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="New" Width="75" Click="NewCredentialSet_Click" Margin="0,0,5,0"/>
            <Button Content="Delete" Width="75" Click="DeleteCredentialSet_Click"/>
        </StackPanel>
        
        <!-- Right side - Credential Set Editor -->
        <TextBlock Grid.Column="1" Grid.Row="0" Text="Edit Credential Set" FontWeight="Bold" Margin="0,0,0,5"/>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Name -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Credential Set Name:" Margin="0,0,0,2"/>
                <TextBox Name="CredentialNameTextBox" Padding="3" IsEnabled="False"/>
            </StackPanel>
            
            <!-- Biller GUID -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Biller GUID:" Margin="0,0,0,2"/>
                <TextBox Name="BillerGUIDTextBox" Padding="3" IsEnabled="False"/>
            </StackPanel>
            
            <!-- Web Service Key -->
            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock Text="Web Service Key:" Margin="0,0,0,2"/>
                <TextBox Name="WebServiceKeyTextBox" Padding="3" IsEnabled="False"/>
            </StackPanel>
            
            <!-- Save Button -->
            <Button Grid.Row="3" Name="SaveButton" Content="Save" Width="75" HorizontalAlignment="Left" 
                    Margin="0,10,0,0" Click="SaveCredentialSet_Click" IsEnabled="False"/>
        </Grid>
        
        <!-- Close Button -->
        <Button Grid.Column="1" Grid.Row="2" Content="Close" Width="75" HorizontalAlignment="Right" 
                Margin="0,10,0,0" Click="CloseButton_Click"/>
    </Grid>
</Window>